<form method='POST' action='/entry/save'>
    {{#if docreate}}
    <input type='hidden' name='docreate' value="create">
    {{else}}
    <input type='hidden' name='docreate' value="update">
    {{/if}}
    <p>Date:
        {{#if docreate }}
        <input type='text' name='date' value='' />
        {{else}}
        {{#if entry }}{{date}}{{/if}}
        <input type='hidden' name='date' value='{{#if entry }}{{date}}{{/if}}' />
        {{/if}}
    </p>
    <p>Title:
        <input type='text' name='title' value='{{#if entry }}{{entry.title}}{{/if}}' />
    </p>
    <br />
    <textarea rows=10 cols=100 name='content'>
        {{#if entry }}{{entry.content}}{{/if}} 
    </textarea>
    <br />
    <input type='submit' value='Submit' />
</form>