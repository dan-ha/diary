<div class="row flex-center form-middle">
    <div class="sm-5 col border border-primary padding-left-large padding-right-large paper">
        <form id="diaryLoginForm" method="POST" action="/user/login">
            {{#if message}}
              <div class="alert {{message.class}}">{{message.message}}</div>
            {{/if}}
            <div class="form-group">
                <label for="username">User name: </label>
                <input class="input-block" type="text" name="username" id="username" placeholder="User Name" autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input class="input-block" type="password" name="password" id="password" placeholder="Password">
            </div>

            <div>
                <button id="formLoginBtn" class="btn-success" type="submit">Login</button>
            </div>
        </form>
    </div>
</div>