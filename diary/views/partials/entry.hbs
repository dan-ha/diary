<div class="paper">
    <form id="formAddEditEntry" method='POST' action='/entry/save'>
        {{#if docreate}}
        <input type='hidden' name='docreate' value="create">
        {{else}}
        <input type='hidden' name='docreate' value="update">
        {{/if}}
        <div class="row">
            <!-- Error message -->
            {{#if error}}
            <div class="col sm-12">
                <input class="alert-state" id="alert-5" type="checkbox">
                <div class="alert alert-danger dismissible">
                    {{error}}
                    <label class="btn-close" for="alert-5">X</label>
                </div>
            </div>
            {{/if}}
            <div class="col sm-4">
                <div class="form-group">
                    <label for="date">Date</label>
                    {{#if docreate }}
                    <input type="text" name="date" id="date" class="input-block" value="{{date}}">
                    {{else}}
                    <input type="text" name="date" id="date" class="input-block" disabled
                        value='{{#if entry }}{{date}}{{/if}}'>
                    <input hidden type="text" name="date" value='{{#if entry }}{{date}}{{/if}}'>
                    {{/if}}
                </div>
            </div>
            <div class="col sm-8">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="input-block" placeholder="Title"
                        autocomplete="off" value='{{#if entry }}{{entry.title}}{{/if}}'>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col sm-12">
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="input-block" rows="10" name='content' id="content" autocomplete="off"
                        placeholder="What is on your mind?">{{#if entry }}{{entry.content}}{{/if}}</textarea>
                </div>
            </div>
        </div>
        <div class="row flex-right">
            <button class="sm-2 col btn-warning">Delete</button>
            <button id="btnSave" type='submit' class="sm-2 col btn-success">Save</button>
        </div>
    </form>
</div>